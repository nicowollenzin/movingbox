= form_for @box do |f|
  - if @box.errors.any?
    #error_explanation
      %h2= "#{pluralize(@box.errors.count, "error")} prohibited this box from being saved:"
      %ul
        - @box.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  
  = f.fields_for :things do |builder|
    %p.fields
      = builder.label :desc, "Content"
      = builder.text_field :desc, :rows => 3
      = f.hidden_field :_destroy
      = link_to_remove_fields "remove", f

  %p
    = link_to_add_fields "Add thing", f, :things

  .actions
    = f.submit 'Save'
